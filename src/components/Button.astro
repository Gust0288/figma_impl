---
const { buttonText, color, source } = Astro.props;
---

<div>
  <button id={color}><img src={source} alt="" />{buttonText}</button>
</div>

<style>
  #black {
    background-color: #181818;

    & > img {
      display: none;
    }
  }
  #yellow {
    background-color: #ffcc4a;
    color: #181818;
    display: flex;
    align-items: center;
    padding: 0.3rem 0.8rem;
    gap: 0.1rem;
    & > img {
      width: 1.35056rem;
      height: 1rem;
    }
  }
</style>
