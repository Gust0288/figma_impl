---
const { source, h1Text, pText, buttonText } = Astro.props;
---

<div>
  <img src={source} alt="Icon" />
  <h1>{h1Text}</h1>
  <p>{pText}</p>

  <button>Read More <img src="/icons/arrow.svg" alt="" /></button>
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-radius: 1.25rem;
    border: 1px solid #eaeaea;
    padding: 1rem 1rem;
    align-items: flex-start;
    gap: 0.6em;
    width: 12rem;
  }
  h1 {
    font-weight: 600;
  }
  img {
    width: 2.3rem;
    height: 2.3rem;
  }
  button {
    color: #181818;
    font-weight: 600;
    align-items: center;
    gap: 0em;
    border-radius: 1.25rem;
  }
  button img {
    height: 0.7rem;
  }
</style>
