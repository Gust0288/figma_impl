<style>
  main {
    container-type: inline-size;
    display: grid;
    grid-template-columns: 1fr minmax(0, 60rem) 1fr;

    * > {
      grid-column: 2;
    }

    @container (width < 850px) {
      grid-template-columns: 1fr;
    }
  }
  .introContent {
    grid-column: 1/-1;
  }
  .mainContent {
    display: grid;
    grid-template-columns: inherit;
    grid-column: 1/-1;
    padding: 4svw 0svw;
    &:nth-of-type(3) {
      background: #f5f5f5;
    }
    &:nth-of-type(5) {
      background: #f5f5f5;
    }

    /* :has(article) {
      background: #f5f5f5;
    } */

    > * {
      grid-column: 2;
    }
    @container (width < 1000px) {
      grid-template-columns: 1f;
      padding: 2svw 3svw 2svw 3svw;
    }
  }
  #article_1_1 {
    display: flex;
    gap: 7.62em;
    justify-content: space-evenly;
    align-items:;

    & > :nth-child(1) {
      flex-direction: column;
      gap: 1em;
    }

    & div:has(> img, p) {
      display: flex;
      gap: 1em;
    }
    & img {
      width: 1.23044rem;
      height: 1.23044rem;
    }
    @container (width < 850px) {
      flex-direction: column;
    }
  }

  #article_1_2 {
    display: flex;
    flex-direction: column;
    gap: 3em;

    & > :first-child {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      gap: 3em;
    }
    & > :last-child {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }
    & > :first-child > div {
      display: flex;
      flex-direction: column;
      gap: 0.75em;
    }
    @container (width < 850px) {
      & > :first-child {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        gap: 3em;
      }
      & > :last-child {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        gap: 2svw;
      }
    }
  }
  #article_1_3 {
    display: flex;
    flex-direction: column;
    text-align: center;
    gap: 1em;
    @container (width < 850px) {
      text-align: left;
    }
  }
  #article_1_4 {
    display: flex;
    flex-direction: column;
    gap: 1em;
    & > div {
      display: flex;
      gap: 2em;
    }
    @container (width < 850px) {
      & > div {
        display: flex;
        flex-direction: column;
        gap: 2em;
      }
    }
  }
  #article_1_5 {
    display: flex;
    justify-content: space-between;
    padding: 0em 5em 0em 5em;
    border-radius: 1.875rem;
    background: #181818;

    & > :first-child {
      display: flex;
      flex-direction: column;
      padding: 4em 0em;
      gap: 0.6em;
    }
    & > :last-child {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      flex-direction: column;
      padding-top: 2.5em;
    }
    & h2 {
      color: #fff;
    }
    & h2 span {
      color: #727272;
    }
    @container (width < 850px) {
      flex-direction: column;
      padding: 1em 1em 1em 1em;
      justify-content: center;
    }
  }
  dl {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8.4375rem;
    padding: 3rem 3rem 0rem 3rem;
    @container (width < 850px) {
      flex-direction: column;
    }
  }
</style>
